@model ToolBox_MVC.Models.Credentials
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
}

<div class="align-content-center" style="width:100%; display:flex; align-items:center; justify-content:center; ">
    <form style="width: 40%;" asp-action="Login">
        <div style="margin-top: 30px;">
            <label for="nomUtilisateur">Nom d'utilisateur</label>
            <input type="text" class="form-control" asp-for="Username" placeholder="Nom d'utilisateur" id="nomUtilisateur" />
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>
        <div style="margin-top: 30px;">
            <label for="mdp">Mot de passe</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Mot de passe" id="mdp" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 30px;">Se connecter</button>
    </form>
</div>
